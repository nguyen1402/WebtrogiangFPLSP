@using FPLSP.Server.Infrastructure.ViewModels.ImagesCP
<EditForm Model="@imageCPListSearchVm" OnSubmit="@SearchForm">
    <div class="row">
        <div class="form-group">
            <label for="name" class="col-md-2 col-form-label">Trạng thái:</label>
            <div class="col">
                <InputSelect class="form-control" @bind-Value="imageCPListSearchVm.Status">
                    <option value="">Tất cả</option>
                    <option value="1">Đang hoạt động</option>
                    <option value="0">Không hoạt động</option>
                </InputSelect>
            </div>
        </div>

        <div class="form-group">
            <label for="name" class="col-md-2 col-form-label">Link Ảnh:</label>
            <div class="col">
                <InputText class="form-control" @bind-Value="imageCPListSearchVm.Path"></InputText>
            </div>
        </div>
        <div class="form-group ">
            <label for="name" class="col-md-2 col-form-label">Mô Tả:</label>
            <div class="col">
                <InputTextArea class="form-control" @bind-Value="imageCPListSearchVm.Descriptions"></InputTextArea>
            </div>
        </div>

        <div class="col mt-3 text-center">
            <button type="submit" class="btn btn-success">Tìm kiếm <i class="fas fa-magnifying-glass"></i></button>
        </div>
    </div>

</EditForm>
<h3>ImageSearch</h3>

@code {
    [Parameter]
    public EventCallback<ImageCPListSearchVm> OnSearch { get; set; }

    private ImageCPListSearchVm imageCPListSearchVm = new ImageCPListSearchVm();

    private async Task SearchForm(EditContext context)
    {
        await OnSearch.InvokeAsync(imageCPListSearchVm);
    }
}
