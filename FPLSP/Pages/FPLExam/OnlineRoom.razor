    private async void OnTimedEvent(object? sender, ElapsedEventArgs e)
    {
        try
        {
            _secondsToRun--;

            await InvokeAsync(() =>
                                                                                                                                                            {
                                                                                                                                                                Time = TimeSpan.FromSeconds(_secondsToRun).ToString(@"hh\:mm\:ss");
                                                                                                                                                                StateHasChanged();
                                                                                                                                                            });

